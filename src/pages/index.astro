---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'SKG-JS â€” Thessaloniki JavaScript Community',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Join Us',
        href: '#next-event',
        icon: 'tabler:calendar-event',
      },
      { text: 'Learn More', href: '#about' },
    ]}
    image={{ src: 'https://images.unsplash.com/photo-1540575467063-178a50c2df87?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80', alt: 'JavaScript Code' }}
  >
    <Fragment slot="title">
      <span class="text-5xl md:text-7xl font-bold dark:text-white">SKG-JS</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-xl md:text-2xl dark:text-gray-300">
        Thessaloniki JavaScript Community - Where developers connect, learn, and grow together
      </span>
    </Fragment>
  </Hero>

  <!-- Next Event Widget ******************* -->

  <Content
    id="next-event"
    tagline="Upcoming Event"
    title="Next SKG-JS Meetup"
    items={[
      {
        title: 'Date & Time',
        description: 'March 15, 2025 at 18:30',
        icon: 'tabler:calendar',
      },
      {
        title: 'Location',
        description: 'TechHub Thessaloniki, Tsimiski 73',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Topic',
        description: 'Modern JavaScript Frameworks: Building Scalable Applications',
        icon: 'tabler:code',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1540575467063-178a50c2df87?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Event Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Join Our Next Event</h3>
      Join us for an evening of learning, networking, and discussing the latest trends in JavaScript development. Whether you're a beginner or an experienced developer, everyone is welcome!
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- About Widget *************** -->

  <Features
    id="about"
    tagline="About Us"
    title="What is SKG-JS?"
    subtitle="A vibrant community of JavaScript developers in Thessaloniki, dedicated to sharing knowledge, building connections, and advancing the local tech ecosystem."
    items={[
      {
        title: 'Regular Meetups',
        description:
          'Monthly gatherings where developers share their experiences, present projects, and discuss the latest JavaScript trends.',
        icon: 'tabler:users',
      },
      {
        title: 'Knowledge Sharing',
        description:
          'Workshops, talks, and hands-on sessions covering everything from fundamentals to advanced JavaScript topics.',
        icon: 'tabler:book',
      },
      {
        title: 'Networking',
        description:
          'Connect with fellow developers, find collaboration opportunities, and be part of the growing JavaScript community in Thessaloniki.',
        icon: 'tabler:network',
      },
      {
        title: 'Open to All Levels',
        description:
          'Whether you\'re just starting or you\'re a seasoned pro, SKG-JS welcomes everyone interested in JavaScript.',
        icon: 'tabler:heart',
      },
      {
        title: 'Community Driven',
        description:
          'Our community thrives on member contributions. Share your knowledge, propose topics, and help shape our events.',
        icon: 'tabler:speakerphone',
      },
      {
        title: 'Local Tech Ecosystem',
        description:
          'Be part of building a stronger tech community in Thessaloniki and contribute to the local development scene.',
        icon: 'tabler:building-community',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Join Our Community',
        href: 'https://github.com/skgjs',
        target: '_blank',
        icon: 'tabler:users',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Connect?
    </Fragment>

    <Fragment slot="subtitle">
      Join SKG-JS and be part of Thessaloniki's thriving JavaScript community. Let's build amazing things together!
    </Fragment>
  </CallToAction>
</Layout>
