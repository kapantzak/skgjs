---
import Features from '~/components/widgets/Features.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About SKG-JS',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Us"
    image={{
      src: 'https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Community Image',
    }}
  >
    <Fragment slot="title">
      Welcome to <br />
      <span class="text-accent dark:text-white">SKG-JS Community</span>
    </Fragment>

    <Fragment slot="subtitle">
      SKG-JS is Thessaloniki's vibrant JavaScript community, bringing together developers of all skill levels to share knowledge,
      collaborate on projects, and grow together in the ever-evolving world of JavaScript.
    </Fragment>
  </Hero>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Our Mission',
        description:
          'To foster a welcoming and inclusive JavaScript community in Thessaloniki that empowers developers through knowledge sharing and collaboration.',
      },
      {
        title: 'Our Vision',
        description:
          'To be the leading tech community in Northern Greece, driving innovation and excellence in web development.',
      },
      {
        title: 'What We Do',
        description:
          'We organize monthly meetups, workshops, hackathons, and social events where JavaScript enthusiasts can connect and learn.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1531482615713-2afd69097998?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Team collaboration',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Who We Are</h3>
      A passionate group of developers, educators, and tech enthusiasts united by a love for JavaScript and a commitment to growing the local tech ecosystem.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Features Widget *************** -->

  <Features
    id="community"
    title="What Makes SKG-JS Special"
    subtitle="Our community is built on core values that make every event and interaction meaningful."
    items={[
      {
        title: 'Inclusive Environment',
        description:
          'We welcome developers of all backgrounds, experience levels, and perspectives. Everyone has something valuable to contribute.',
        icon: 'tabler:heart-handshake',
      },
      {
        title: 'Practical Learning',
        description:
          'Our events focus on real-world applications and hands-on experiences that you can immediately use in your projects.',
        icon: 'tabler:code',
      },
      {
        title: 'Networking Opportunities',
        description:
          'Connect with local companies, potential collaborators, mentors, and friends in the Thessaloniki tech scene.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Free & Open',
        description:
          'All our events are free to attend. We believe knowledge should be accessible to everyone.',
        icon: 'tabler:circle-check',
      },
      {
        title: 'Local Impact',
        description:
          'We are dedicated to strengthening the tech ecosystem in Thessaloniki and making it a hub for JavaScript development.',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Community Driven',
        description:
          'Every member can propose talks, organize events, and contribute to shaping the community\'s future.',
        icon: 'tabler:speakerphone',
      },
    ]}
  />
</Layout>
