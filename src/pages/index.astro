---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'SKG-JS â€” Thessaloniki JavaScript Community',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <section class="relative min-h-screen flex items-center justify-center -mt-[76px]">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img
        src="https://images.unsplash.com/photo-1540575467063-178a50c2df87?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
        alt="JavaScript Code"
        class="w-full h-full object-cover"
      />
      <!-- Dark overlay for better text readability -->
      <div class="absolute inset-0 bg-black/60"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 text-center px-4 sm:px-6 max-w-5xl mx-auto">
      <h1 class="text-6xl md:text-8xl lg:text-9xl font-bold text-white mb-6">SKG-JS</h1>
      <p class="text-2xl md:text-3xl lg:text-4xl text-gray-200 mb-12">
        Thessaloniki JavaScript Community - Where developers connect, learn, and grow together
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="https://www.meetup.com/skg-js/events/311173640/"
          target="_blank"
          class="px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-semibold text-lg transition-colors inline-flex items-center justify-center gap-2"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-6 h-6"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M4 5m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"></path>
            <path d="M16 3l0 4"></path>
            <path d="M8 3l0 4"></path>
            <path d="M4 11l16 0"></path>
            <path d="M8 15h2v2h-2z"></path>
          </svg>
          Join Us
        </a>
        <a
          href="#about"
          class="px-8 py-4 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white border-2 border-white/30 rounded-lg font-semibold text-lg transition-colors"
        >
          Learn More
        </a>
      </div>
    </div>
  </section>

  <!-- Next Event Widget ******************* -->

  <Content
    id="next-event"
    tagline="Upcoming Event"
    title="Next SKG-JS Meetup"
    items={[
      {
        title: 'Date & Time',
        description: 'March 15, 2025 at 18:30',
        icon: 'tabler:calendar',
      },
      {
        title: 'Location',
        description: 'TechHub Thessaloniki, Tsimiski 73',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Topic',
        description: 'Modern JavaScript Frameworks: Building Scalable Applications',
        icon: 'tabler:code',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1540575467063-178a50c2df87?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Event Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Join Our Next Event</h3>
      Join us for an evening of learning, networking, and discussing the latest trends in JavaScript development. Whether
      you're a beginner or an experienced developer, everyone is welcome!
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- About Widget *************** -->

  <Features
    id="about"
    tagline="About Us"
    title="What is SKG-JS?"
    subtitle="A vibrant community of JavaScript developers in Thessaloniki, dedicated to sharing knowledge, building connections, and advancing the local tech ecosystem."
    items={[
      {
        title: 'Regular Meetups',
        description:
          'Frequent gatherings where developers share their experiences, present projects, and discuss the latest JavaScript trends.',
        icon: 'tabler:users',
      },
      {
        title: 'Knowledge Sharing',
        description:
          'Workshops, talks, and hands-on sessions covering everything from fundamentals to advanced JavaScript topics.',
        icon: 'tabler:book',
      },
      {
        title: 'Networking',
        description:
          'Connect with fellow developers, find collaboration opportunities, and be part of the growing JavaScript community in Thessaloniki.',
        icon: 'tabler:network',
      },
      {
        title: 'Open to All Levels',
        description:
          "Whether you're just starting or you're a seasoned pro, SKG-JS welcomes everyone interested in JavaScript.",
        icon: 'tabler:heart',
      },
      {
        title: 'Community Driven',
        description:
          'Our community thrives on member contributions. Share your knowledge, propose topics, and help shape our events.',
        icon: 'tabler:speakerphone',
      },
      {
        title: 'Local Tech Ecosystem',
        description:
          'Be part of building a stronger tech community in Thessaloniki and contribute to the local development scene.',
        icon: 'tabler:building-community',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Join Our Community',
        href: 'https://www.meetup.com/skg-js/events/311173640/',
        target: '_blank',
        icon: 'tabler:users',
      },
    ]}
  >
    <Fragment slot="title"> Ready to Connect? </Fragment>

    <Fragment slot="subtitle">
      Join SKG-JS and be part of Thessaloniki's thriving JavaScript community. Let's build amazing things together!
    </Fragment>
  </CallToAction>
</Layout>
